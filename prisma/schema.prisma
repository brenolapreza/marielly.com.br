datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

model Section {
  id       Int     @id @default(autoincrement())
  section  Int
  title    String?
  subtitle String?
  content  Json? // Conteúdo do tipo JSON
  button   Json? // Um botão simples, também em JSON
  cards    Json? // Cartões no formato JSON
  buttons  Json? // Botões múltiplos em formato JSON
}
